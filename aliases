# Shell
alias ll="ls -l"
alias la="ls -a"
alias lll="la -l"
alias md='mkdir -p'
alias rd='rmdir'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias psg='ps aux | fzf'
alias h='history'
alias hs='history | fzf'

# Other
alias aliases="cat ~/dotfiles/aliases | fzf"
alias alacritty="nvim ~/dotfiles/config/alacritty/alacritty.yml"
alias nc="nvim ~/dotfiles/config/nvim/init.vim"
alias dots="cd ~/dotfiles"
alias zshrc="nvim ~/dotfiles/zshrc"
alias gh="open \`git remote -v | grep git@github.com | grep fetch | head -1 | cut -f2 | cut -d' ' -f1 | sed -e's/:/\//' -e 's/git@/http:\/\//'\`"

alias ri="nvim -u ~/.config/rafi_nvim/init.vim"
alias ni='nvim -u ~/.config/nvim/init.vim'

# Tmux
alias tml='tmux ls'
alias tmn='tmux new -s'
alias tma='tmux attach -t'

# Git
alias gap='git add -p'
alias ga='git add'
alias gnap='git add -N . && git add -p'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gd='git diff --color-words'
alias gdc='git diff --cached'
alias gdh='git diff HEAD'
alias gl='git pull'
alias glod='git log --graph --pretty="%Cgreen%h%Creset%Cblue%d%Creset %Cred%an%Creset: %s"'
alias gp='git push'
alias gpr='git pull --rebase'
alias gst='git status'
alias gr='git rebase'
alias grc='git rebase --continue'
alias gri='git rebase --interactive'
alias gra='git rebase --abort'
alias gcp='git cherry-pick'
alias gco='git checkout'
